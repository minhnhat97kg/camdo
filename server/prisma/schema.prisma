model Loan {
  id           Int          @id @default(autoincrement())
  userName     String
  productName  String
  amount       Int
  status       Status       @default(ACTIVED)
  interest     Float
  interestType InterestType
  startedAt    DateTime
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  paidAmount   Int?
  paidAt       DateTime?
  userPhone    String?
  userID       Int
}

model User {
  id       Int    @id @default(autoincrement())
  userName String
  password String
}

model Wallet {
  id Int      @id @default(autoincrement())
  title     String
  amount    Int
  userID    Int
  status    Status   @default(ACTIVED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  ACTIVED
  DELETED
  PAID
}

enum InterestType {
  PERCENTS_PER_MONTH
  PERCENTS_PER_DAY
  AMOUNT_PER_MONTH
  AMOUNT_PER_DAY
}
